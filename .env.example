# Database
DATABASE_URL=postgresql://user:password@localhost:5432/draehi

# Session
SESSION_SECRET=generate-a-random-32-char-secret-here
STORAGE_MODE="local"
# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Binary paths (auto-configured by setup scripts)
CARGO_BIN_PATH=$HOME/.cargo/bin

# Storage (S3-compatible)
STORAGE_MODE=local
S3_BUCKET=draehi-assets

# Local MinIO (for MVP development)
MINIO_ENDPOINT=http://localhost:9000
MINIO_PUBLIC_URL=http://localhost:9000
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# Production AWS S3 (override for production)
# STORAGE_MODE=production
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# S3_BUCKET=draehi-prod-assets
